<h4>Posts</h4>

<table class="table table-dark">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Texto</th>
			<th scope="col">Usu√°rio</th>
			<th scope="col">Criado em</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %> 
			<tr>
				<th scope="row"><%= post.id %></th>
				<td><%= link_to post.body.truncate(30), admin_post_path(post) %></td>
				<td><%= image_tag(post.user.avatar, class: "ui-w-100-forced rounded-circle mr-3", style: "width: 30px; height: 30px")%><%= post.user.name %></td>
				<td><%= post.created_at.strftime("%d/%m/%Y %H:%M") %></td>
		<% end %>
	</tbody>
</table>